                        {{/if}}
                    </button>

                    <ul class="dropdown-menu">
                        {{#if adminSession}}
                        <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                        {{else}}
                        <li><a class="dropdown-item" href="/admin/login">Login</a></li>
