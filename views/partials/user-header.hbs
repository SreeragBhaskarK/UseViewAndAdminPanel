<header {{#if noShow}} hidden {{/if}} style="padding-bottom: 56px;">
    <nav class="navbar navbar-expand-lg " style="position: fixed;
    top: 0;
    width: 100%;
    z-index: 1;">
        <div class="container-fluid">
            <a class="navbar-brand navText" href="/">Shopping Cart</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link  navText" aria-current="page" href="/">Products</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link navText" href="#">Cart</a>
                    </li>
                    {{#if user}}
                    <li class="nav-item">
                        <a class="nav-link navText" href="#">Orders</a>
                    </li>
                    {{/if}}

                </ul>
                <div class="dropdown">
                    <button class="btn btn-info dropdown-toggle" type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                        {{#if user}}
                        {{user.name}}
                        {{else}}
                        <span class="navButtonText";">
                            Account
                        </span>

                        {{/if}}
                    </button>
                    <ul class="dropdown-menu">
                        {{#if user}}
                        <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        {{else}}
                        <li><a class="dropdown-item" href="/login">Login</a></li>
                        {{/if}}

                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>